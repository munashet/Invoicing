<Window x:Class="Invoicing.CategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Category" Height="252" Width="483">
    <Grid>
        <Label Content="Category Name:" HorizontalAlignment="Left" Margin="38,34,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtCategoryName" HorizontalAlignment="Left" Height="23" Margin="129,34,0,0" TextWrapping="Wrap" Text="{Binding CategoryName}" VerticalAlignment="Top" Width="314"/>
        <Label Content="Description" HorizontalAlignment="Left" Margin="38,88,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtDescription" HorizontalAlignment="Left" Height="56" Margin="129,84,0,0" TextWrapping="Wrap" Text="{Binding Description}" VerticalAlignment="Top" Width="314"/>
        <Button Name="btnUpdate" Content="Update" Padding="7" Click="btnUpdate_Click" HorizontalAlignment="Left" Margin="140,165,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Name="btnCancel" Content="Cancel" Padding="7" Click="btnCancel_Click"  HorizontalAlignment="Left" Margin="254,165,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
