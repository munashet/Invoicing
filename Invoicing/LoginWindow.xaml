<Window x:Class="Invoicing.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="246.993" Width="456.767" WindowStartupLocation="CenterOwner">
    <Grid>
        <Label Content="Username:" HorizontalAlignment="Left" Margin="127,41,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Height="23" Margin="203,41,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="221" TabIndex="0"/>
        <Image HorizontalAlignment="Left" Height="124" Margin="10,41,0,0" VerticalAlignment="Top" Width="126" Source="images/login.png"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="127,92,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="136,164,0,0" VerticalAlignment="Top" Width="75" Click="btnLogin_Click" TabIndex="2"/>
        <Button x:Name="btnCancel" Content="Exit" HorizontalAlignment="Left" Margin="273,164,0,0" VerticalAlignment="Top" Width="75" Click="btnCancel_Click" TabIndex="3"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="203,92,0,0" VerticalAlignment="Top" Width="221" TabIndex="1"/>

    </Grid>
</Window>
